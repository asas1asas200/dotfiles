# Switch workspace by mod1 + mod2 + arrow('h, l' or 'Left, Right')
bindsym $mod+$mod2+h workspace prev_on_output
bindsym $mod+$mod2+Left workspace prev_on_output

bindsym $mod+$mod2+l workspace next_on_output
bindsym $mod+$mod2+Right workspace next_on_output
bindsym $mod+Shift+n exec swaync-client -t -sw

